//HrNotificationApp
package com.hr.hrnotification;


import org.springframework.boot.SpringApplication;
import org.springframework.boot.autoconfigure.SpringBootApplication;

@SpringBootApplication
public class HrNotificationApp {
    public static void main(String[] args) {
        SpringApplication.run(HrNotificationApp.class, args);
        System.out.println("HR Notification Microservice Running...");
    }
}
