//Employee
package com.employee.employeeservice;

public class Employee {
    private int eno;
    private String ename;
    private String designation;
    private String deptName;

    public Employee(int eno, String ename, String designation, String deptName) {
        this.eno = eno;
        this.ename = ename;
        this.designation = designation;
        this.deptName = deptName;
    }

    public int getEno() { return eno; }
    public String getEname() { return ename; }
    public String getDesignation() { return designation; }
    public String getDeptName() { return deptName; }
}
//EmployeeController
package com.employee.employeeservice;

import java.util.*;
import org.springframework.web.bind.annotation.*;
import com.employee.employeeservice.Employee;

@RestController
@RequestMapping("/employees")
public class EmployeeController {

    private List<Employee> list = Arrays.asList(
            new Employee(1, "Amit", "Developer", "IT"),
            new Employee(2, "Sneha", "Manager", "HR"),
            new Employee(3, "Rohit", "Analyst", "IT")
    );
    @GetMapping("/{dept}")
    public List<Employee> getByDepartment(@PathVariable String dept) {
        List<Employee> filtered = new ArrayList<>();
        for (Employee e : list) {
            if (e.getDeptName().equalsIgnoreCase(dept)) {
                filtered.add(e);
            }
        }
        return filtered;
    }
}
//EmployeeServiceApp
package com.employee.employeeservice;

import org.springframework.boot.SpringApplication;
import org.springframework.boot.autoconfigure.SpringBootApplication;

@SpringBootApplication
public class EmployeeServiceApp {
    public static void main(String[] args) {
        SpringApplication.run(EmployeeServiceApp.class, args);
        System.out.println("Employee Microservice Running...");
    }
}
