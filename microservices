//Studentservice program 
Artifact: StudentService
Dependencies: Spring Web, DevTools
Package: com.micro.student
//Student.java
package com.student.studentservice;

public class Student {
    private int id;
    private String name;
    private String department;

    public Student(int id, String name, String department) {
        this.id = id;
        this.name = name;
        this.department = department;
    }

    public int getId() { return id; }
    public String getName() { return name; }
    public String getDepartment() { return department; }
}
//StudentController
package com.student.studentservice;


import java.util.*;
import org.springframework.web.bind.annotation.*;
import com.student.studentservice.Student;

@RestController
@RequestMapping("/students")
public class StudentController {

    @GetMapping
    public List<Student> getAllStudents() {
        return Arrays.asList(
            new Student(1, "Prachi", "Computer Science"),
            new Student(2, "Ravi", "Mathematics"),
            new Student(3, "Neha", "Physics")
        );
    }
}
//StudentServiceAppp
package com.student.studentservice;

import org.springframework.boot.SpringApplication;
import org.springframework.boot.autoconfigure.SpringBootApplication;

@SpringBootApplication
public class StudentServiceApp {
    public static void main(String[] args) {
        SpringApplication.run(StudentServiceApp.class, args);
        System.out.println("Student Microservice Running...");
    }
}
