//SRPStudentDemo
import java.io.FileWriter;
import java.io.IOException;

class Student {
    String name; int[] marks;
    Student(String n,int[] m){ name=n; marks=m; }
}

class GradeCalculator {
    double avg(int[] m){ int s=0; for(int x:m)s+=x; return s/(double)m.length; }
    char grade(double a){ return (a>=90)?'A':(a>=75)?'B':(a>=60)?'C':(a>=40)?'D':'F'; }
}

class StudentRepository {
    void save(Student s,double avg,char g){
        try(FileWriter f=new FileWriter("students.txt",true)){
            f.write(s.name+" Avg:"+avg+" Grade:"+g+"\n");
        }catch(IOException e){ e.printStackTrace(); }
    }
}

public class SRPStudentDemo {
    public static void main(String[] args){
        Student s=new Student("Prachi",new int[]{85,90,88});
        GradeCalculator gc=new GradeCalculator();
        double avg=gc.avg(s.marks);
        char g=gc.grade(avg);
        System.out.println("Average="+avg+" Grade="+g);
        new StudentRepository().save(s,avg,g);
    }
}
